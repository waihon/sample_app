<!-- Reviewed -->
<!-- This does nothing when @user is not nil (as on a profile page -->
<!-- for which @user is set by UsersController), but when it is nil -->
<!-- (as on the Home page) it sets @user to the current user. -->
<% @user ||= current_user %>

<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>