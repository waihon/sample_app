<!-- Reviewed -->
<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <%= render "shared/user_info" %>
      </section>
      <section>
        <%= render "shared/stats" %>
      </section>
      <section>
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Sample App</h1>
    <p>
      This is the home page for a sample microblogging application,<br/>
      developed by <a href="http://fb.me/waihonpage">Waihon Yew</a>
      based on <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>.
    </p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), "http://rubyonrails.org/" %>
<% end %>